
<p> Name : <%= @pizza.pretty_name() %> </p>
<p> Topping : <%= @pizza.topping() %> </p>
<p> Quantity : <%= @pizza.quantity() %> </p>
<p> Total spent : <%= @pizza.total() %> </p>
<p> Individual pizza cost : <%= @pizza.total()/@pizza.quantity() %> </p>
<form method="post" action ="/pizzas/<%= @pizza.id%>/delete">
<input type="submit"  value="Cancel order"/>
</form>
<form method="get" action ="/pizzas/<%= @pizza.id%>/edit">
<input type="submit"  value="Change order"/>
</form>
